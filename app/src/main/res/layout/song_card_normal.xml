<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/song_card"
    android:layout_width="120dp"
    android:background="@color/PrimaryColor"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="1dp"
    cardView:cardBackgroundColor="#ffffff"
    cardView:cardCornerRadius="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/thumbnailFrame"
            android:background="#009988"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/Videothumbnail"
                android:src="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/download_btn_card"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text=""
                    android:layout_gravity="center"
                    android:background="@drawable/download_btn_on_card"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/song_time_length"
                    android:textColor="@color/White"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="2dp"
                    android:layout_gravity="end|bottom"
                    android:gravity="center_horizontal"
                    android:background="@color/DownloadButtonColor"
                    android:textSize="14sp"
                    android:text="02:10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/thumbnailFrame"
            android:padding="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#dd000000"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:text="Set Fire To Rain\n - Adele"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/song_title" />

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="6"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_weight="1">

                        <TextView
                            android:gravity="bottom|center_horizontal"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/DownloadButtonColor"
                            android:id="@+id/uploader_icon"
                            android:textSize="12sp"
                            android:text=""
                            android:layout_width="16sp"
                            android:layout_height="16dp" />

                        <TextView
                            android:textColor="@color/PrimaryColor"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:text="Adele"
                            android:layout_toRightOf="@+id/uploader_icon"
                            android:id="@+id/uploader_name"
                            android:layout_width="match_parent"
                            android:layout_height="16dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:gravity="bottom|center_horizontal"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/DownloadButtonColor"
                            android:id="@+id/views_icon"
                            android:textSize="12sp"
                            android:text=""
                            android:layout_width="16sp"
                            android:layout_height="16dp" />

                        <TextView
                            android:textColor="@color/PrimaryColor"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:text="100,000 views"
                            android:layout_toRightOf="@+id/views_icon"
                            android:id="@+id/views_text"
                            android:layout_width="match_parent"
                            android:layout_height="16dp" />

                    </RelativeLayout>

                </LinearLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:paddingRight="2dp"
                        android:id="@+id/popUpMenuIcon"
                        android:gravity="end|center_vertical"
                        android:text="&#8942;"
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

