<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_eve_wisher_themed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context="any.audio.Activity.EveWisherThemedActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/eveMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="Happy Christmas"
                android:textColor="@color/AccentColor"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/evePic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eveMessage"
                android:padding="8dp"
                android:src="@drawable/sample" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/evePic"
                android:background="@drawable/update_dialog_divider">

            </FrameLayout>

            <TextView
                android:id="@+id/sayThanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frameLayout"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:onClick="cancel"
                android:paddingBottom="12dp"
                android:paddingTop="10dp"
                android:text="Say Thanks !"
                android:textColor="@color/PrimaryColor"
                android:textSize="16sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
