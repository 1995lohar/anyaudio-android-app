<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/song_card"
    android:layout_width="120dp"
    android:background="@color/PrimaryColor"
    android:layout_height="160dp"
    android:layout_margin="5dp"
    android:elevation="3dp"
    cardView:cardBackgroundColor="#ffffff"
    cardView:cardCornerRadius="1dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">

        <RelativeLayout
            android:background="#009988"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:background="@drawable/hqdefault"
                android:src=""
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/download_btn_card"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:text="D"
                    android:layout_gravity="center"
                    android:background="@drawable/download_btn_on_card"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/sont_time_length"
                    android:textColor="@color/White"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_gravity="end|bottom"
                    android:gravity="center_horizontal"
                    android:background="@color/DownloadButtonColor"
                    android:textSize="10sp"
                    android:text="02:10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>

        </RelativeLayout>

        <LinearLayout
            android:padding="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:text="Set Fire To Rain - Adele"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="6"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent">

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="0d"
                      android:layout_weight="1">

                      <TextView
                          android:id="@+id/uploader_icon"
                          android:textSize="10sp"
                          android:text="A"
                          android:layout_width="10sp"
                          android:layout_height="10sp" />

                      <TextView
                          android:textSize="10sp"
                          android:text="Adele"
                          android:layout_toRightOf="@+id/uploader_icon"
                          android:id="@+id/uploader_name"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent" />

                  </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0d"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/views_icon"
                            android:textSize="10sp"
                            android:text="A"
                            android:layout_width="10sp"
                            android:layout_height="10sp" />

                        <TextView
                            android:textSize="10sp"
                            android:text="Adele"
                            android:layout_toRightOf="@+id/views_icon"
                            android:id="@+id/views_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:paddingRight="2dp"
                        android:id="@+id/popUpMenuIcon"
                        android:gravity="end"
                        android:text="&#8942;"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

