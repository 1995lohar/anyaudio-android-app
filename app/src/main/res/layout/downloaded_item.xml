<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#fefefe"
    android:padding="@dimen/downloaded_item_wrapper_padding">


    <ImageView
        android:layout_margin="@dimen/downloaded_item_thumb_margin"
        android:id="@+id/downloaded_item_thumb"
        android:src="@drawable/downloaded"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <TextView
        android:id="@+id/downloaded_item_title"
        android:gravity="center_vertical"
        android:text="Rafta Rafta Dil Gaya Dil Gaya Rafta Rafta we"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/downloaded_item_title_margin"
        android:maxLength="35"
        android:lines="1"
        android:maxLines="1"
        android:textSize="14dp"
        android:textColor="@color/PrimaryColor"
        android:layout_toRightOf="@+id/downloaded_item_thumb"/>

</RelativeLayout>


