<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fefefe"
    android:elevation="@dimen/dowloaded_item_wrapper_elevation"
    android:padding="@dimen/downloaded_item_wrapper_padding">


    <ImageView
        android:layout_margin="@dimen/downloaded_item_thumb_margin"
        android:id="@+id/downloaded_item_thumb"
        android:src="@drawable/kajal"
        android:layout_width="@dimen/downloaded_item_thumbnai_dimen"
        android:layout_height="@dimen/downloaded_item_thumbnai_dimen" />

    <TextView
        android:id="@+id/downloaded_item_title"
        android:text="Rafta Rafta Dil Gaya Dil Gaya Rafta Rafta we"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/downloaded_item_title_margin"
        android:maxLength="35"
        android:lines="1"
        android:maxLines="1"
        android:textSize="@dimen/downloaded_item_extraa_meta_info_text_size"
        android:textColor="@color/PrimaryColor"
        android:layout_toRightOf="@+id/downloaded_item_thumb"/>

    <TextView
        android:id="@+id/downloaded_item_extra_meta"
        android:text="Rafta Rafta Dil Gaya Dil Gaya Rafta Rafta we"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/downloaded_item_extra_meta_info_margin_left"
        android:lines="1"
        android:maxLines="1"
        android:maxLength="35"
        android:textSize="@dimen/dowloaded_item_extraa_metainfo_text_size"
        android:layout_below="@+id/downloaded_item_title"
        android:layout_toRightOf="@+id/downloaded_item_thumb"/>


    <TextView
        android:id="@+id/downloaded_item_overflow_icon"
        android:text="@string/overflow_icon_text_unicode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/downloaded_item_extra_meta_info_margin_left"
        android:maxLength="35"
        android:textSize="@dimen/downloaded_item_overflow_icon_text_size"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/downloaded_item_overflow_icon_text_padding"/>

</RelativeLayout>


