<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:text="î…Œ"
        android:textColor="@color/AnyAudioPrimaryColor"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/updates_top_wrapper"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/updateCaption"
            android:textColor="@color/AnyAudioPrimaryColor"
            android:textSize="24sp"
            android:text="HAPPY VALENTINE`S DAY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/tip"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/updateCaption"
            android:layout_width="36dp"
            android:layout_height="3dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/explore_text_under_tip"/>

    </RelativeLayout>

    <TextView
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_below="@+id/updates_top_wrapper"
        android:textColor="@color/AnyAudioGrey224"
        android:text="Celebrate Your Valentine with some of lovely songs that we reccoment"
        android:id="@+id/newFeatures"
        android:paddingRight="48dp"
        android:paddingLeft="48dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:layout_marginTop="14dp"
        android:text="MORE"
        android:textColor="@color/White"
        android:id="@+id/updateBtn"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/terms_accept_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/newFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>