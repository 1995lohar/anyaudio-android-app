<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/music_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        cardView:cardBackgroundColor="#ffffff"
        cardView:cardCornerRadius="2dp">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <FrameLayout
                android:id="@+id/thumbnail_frame"
                android:layout_width="120dp"
                android:layout_height="92dp"
                android:layout_centerVertical="true"
                android:background="#009988">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp">

                    <ImageView
                        android:id="@+id/thumbnail_image"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:src="@drawable/hqdefault" />

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/content_time_length"
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/thumbnail_overleaf"
                            android:gravity="bottom|end"
                            android:paddingRight="2dp"
                            android:text="12:00"
                            android:textColor="@color/White"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </RelativeLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_toRightOf="@+id/thumbnail_frame"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:weightSum="8">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/song_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="3"
                        android:text="Sanam Re | Arjit \n Singh \nFull Track Songs \nTitle Songs -Remix"
                        android:textColor="@color/TrackTitleColor"
                        android:textSize="16dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5">

                    <TextView
                        android:id="@+id/song_uploader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Uploaded By : Ankit Kumar"
                        android:textColor="@color/ExtraInfoTextColor"
                        android:textSize="14dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5">

                    <TextView
                        android:id="@+id/song_extras"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="12 days ago . 12,12121 views"
                        android:textColor="@color/ExtraInfoTextColor"
                        android:textSize="14dp" />
                </FrameLayout>


            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/control_panel"
        android:visibility="gone"
        android:layout_below="@+id/music_card"
        android:background="#993493"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </LinearLayout>

</RelativeLayout>