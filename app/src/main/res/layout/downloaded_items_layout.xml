<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="12dp"
    android:background="@color/AnyAudioPlayerBackground"
    android:paddingRight="12dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:layout_height="96dp">

    <RelativeLayout
        android:padding="4dp"
        android:background="@color/AnyAudioSearchItemBgColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/downloaded_item_info_wrapper"
            android:background="@drawable/btn_ripple_effect"
            android:layout_toLeftOf="@+id/addToQueue"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/downloaded_item_thumbnail_wrapper"
                android:layout_width="76dp"
                android:layout_height="76dp">


                <FrameLayout
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bottom_player_thumbnail_border"
                    android:layout_width="68dp"
                    android:layout_height="68dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_margin="6dp"
                    android:id="@+id/downloaded_item_thumbnail"
                    app:civ_border_width="0dp"
                    android:src="@color/AnyAudioGrey189"
                    app:civ_border_color="@color/PrimaryColor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/downloaded_item_play_btn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/AnyAudioPrimaryColor"
                    android:textSize="32sp" />

            </FrameLayout>

            <TextView
                android:textSize="12sp"
                android:id="@+id/downloaded_item_duration"
                android:textColor="@color/AnyAudioPrimaryColor"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/downloaded_item_thumbnail_wrapper"
                android:text="04:50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/downloaded_item_duration"
                android:id="@+id/downloaded_item_title"
                android:maxLines="1"
                android:layout_toRightOf="@+id/downloaded_item_thumbnail_wrapper"
                android:text="Sanam Rdddddddddddjhbbbbbbbbbbbbbbbbbbbbbjhbddddddddddddddddddde..."
                android:textColor="@color/AnyAudioGrey224"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:layout_below="@+id/downloaded_item_title"
                android:id="@+id/downloaded_item_artist"
                android:layout_toRightOf="@+id/downloaded_item_thumbnail_wrapper"
                android:text="T-Series"
                android:textColor="@color/AnyAudioGrey189"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/deleteDownloadedItem"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_ripple_effect"
            android:textColor="@color/AnyAudioPrimaryColor"
            android:gravity="center"
            android:text=""
            android:textSize="24dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />

    </RelativeLayout>

</RelativeLayout>