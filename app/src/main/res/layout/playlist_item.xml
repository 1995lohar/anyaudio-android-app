<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle_ripple_views"
    android:layout_height="72dp">

    <RelativeLayout
        android:id="@+id/playlist_item_info_wrapper"
        android:layout_toLeftOf="@+id/playlist_item_cancel_btn_text"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/playlist_item_thumbnail_wrapper"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_width="72dp"
        android:layout_height="72dp">

        <FrameLayout
            android:layout_gravity="center"
            android:background="@drawable/bottom_player_thumbnail_border"
            android:layout_width="58dp"
            android:layout_height="58dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="4dp"
            android:id="@+id/playlist_item_thumbnail"
            android:src="@color/AnyAudioGrey189"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/playlist_item_title"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/AnyAudioGrey224"
        android:text="Santoshdfffffffffffffffffff Nanavathe"
        android:lines="1"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/playlist_item_cancel_btn_text"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_toEndOf="@+id/playlist_item_thumbnail_wrapper" />
    <TextView
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/playlist_item_thumbnail_wrapper"
        android:layout_below="@+id/playlist_item_title"
        android:id="@+id/playlist_item_artist"
        android:textSize="14sp"
        android:lines="1"
        android:textColor="@color/AnyAudioGrey189"
        android:maxLines="1"
        android:text="T-Series"
        android:layout_toLeftOf="@+id/playlist_item_cancel_btn_text"
        android:layout_width="match_parent"
        android:layout_height="36dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/playlist_item_cancel_btn_text"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="12dp"
        android:textSize="20sp"
        android:background="@drawable/btn_ripple_effect"
        android:paddingRight="16dp"
        android:textColor="@color/AnyAudioPrimaryColor"
        android:layout_alignParentEnd="true"
        android:text="î…Œ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>