<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/AnyAudioPrimaryBackground"
    android:layout_height="108dp"
    android:orientation="vertical">

    <ImageView
        android:src="@drawable/hqdefault"
        android:scaleType="centerCrop"
        android:id="@+id/notification_player_thumbnail"
        android:layout_width="108dp"
        android:layout_height="108dp" />

    <ImageView
        android:layout_alignParentEnd="true"
        android:src="@drawable/notification_cancel"
        android:id="@+id/notification_player_cancel"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="4dp"
        />


    <LinearLayout
        android:layout_toRightOf="@+id/notification_player_thumbnail"
        android:layout_toLeftOf="@+id/notification_player_cancel"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/notification_player_title"
            android:textColor="@color/AnyAudioGrey224"
            android:textSize="20sp"
            android:text="Sanam Re tu Mera Sanam Hua re"
            android:maxLines="1"
            android:paddingTop="0dp"
            android:paddingLeft="16dp"
            android:paddingBottom="4dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/notification_player_subtitle"
            android:textColor="@color/AnyAudioGrey189"
            android:textSize="16sp"
            android:text="T-Series"
            android:layout_toRightOf="@+id/notification_player_thumbnail"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_action_pause"
                android:id="@+id/notification_player_play_pauseBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="16dp"
                />


            <ImageView
                android:src="@drawable/ic_action_next"
                android:id="@+id/notification_player_nextBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="16dp"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
